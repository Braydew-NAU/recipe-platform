<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>PlatePal - Discover Recipes</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('partials/header') %>

  <div class="container">
    <form action="/search" method="GET" class="search-bar">
      <input type="text" name="q" value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
             placeholder="Search recipes or ingredients">
      <button type="submit">Search</button>
    </form>

    <h2>Popular Recipes</h2>
    <div class="recipe-grid">
      <% if (recipes && recipes.length) { %>
        <% recipes.forEach(r => { %>
          <div class="recipe-card" onclick="window.location='/recipe/<%= r.id %>'">
            <img src="<%= r.image_url || 'https://via.placeholder.com/300x200' %>" alt="<%= r.title %>">
            <h4><%= r.title %></h4>
          </div>
        <% }) %>
      <% } else { %>
        <p>No recipes yet. Be the first to <a href="/create">create one</a>!</p>
      <% } %>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
